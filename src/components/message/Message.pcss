.message {
}

.message-header {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  margin:14px 14px 2px 14px;
}

.message-username {
  color: #000000;
  font-size: 15px;
  font-weight: bold;
}

.message-timeago {
  color: #aaaaaa;
  font-size: 11px;
  font-weight: 100;
  padding: 5px;
}

.message-content {
  margin:2px 14px 10px 14px;
}

.message-text {
  color: #000000;
  font-size: 13px;
  font-weight: 200;
}